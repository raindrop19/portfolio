<%- include('partials/header'); -%>


<h1>Compose</h1>

<form class="" action="/compose" method="post">
  <div class="form-group">
    <label for="exampleFormControlInput1">Title</label>
    <input type="text" class="form-control" name="postTitle" id="exampleFormControlInput1">
    <!-- input has to has a "name" so that it can be called! -->
  </div>

  <div class="form-group">
    <label for="exampleFormControlTextarea1">Post</label>
    <textarea class="form-control" name="postBody" id="exampleFormControlTextarea1" rows="10"></textarea>
    <!-- textarea is for multi-line input -->
  </div>
  <button type="submit" class="btn btn-warning">Publish</button>
</form>

<%- include('partials/footer'); -%>
